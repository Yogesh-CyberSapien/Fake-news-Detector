<ALOASK-SEPARATE-EDITORS>async function analyzeNews() {
    let sourceUrl = document.getElementById("sourceInput").value.trim();
    let newsText = document.getElementById("newsInput").value.trim();
    let resultDiv = document.getElementById("result");

    if (!newsText && !sourceUrl) {
        resultDiv.innerHTML = "<p>Please enter a news source or content.</p>";
        return;
    }

    resultDiv.innerHTML = "<p>Analyzing...</p>";

    // 1. Source Credibility Check
    let trustedSources = ["bbc.com", "cnn.com", "reuters.com", "nytimes.com"];
    let isTrustedSource = trustedSources.some(domain => sourceUrl.includes(domain));

    let credibilityResult = isTrustedSource 
        ? "<p style='color: green;'>✅ Trusted News Source</p>" 
        : "<p style='color: red;'>⚠️ Unverified News Source</p>";

    // 2. AI-Based Language Pattern Analysis (Simulated)
    let suspiciousWords = ["shocking", "you won’t believe", "click here", "exposed", "conspiracy"];
    let suspiciousFound = suspiciousWords.some(word => newsText.toLowerCase().includes(word));

    let languageResult = suspiciousFound 
        ? "<p style='color: red;'>⚠️ Suspicious Language Detected</p>" 
        : "<p style='color: green;'>✅ No Suspicious Language</p>";

    // 3. Cross-Checking Against Fact-Checking APIs
    let factCheckResponse = await fetch("https://factchecktools.googleapis.com/v1alpha1/claims:search?key=YOUR_GOOGLE_API_KEY");
    let factCheckData = await factCheckResponse.json();

    let factCheckResult = factCheckData.claims && factCheckData.claims.length > 0
        ? "<p style='color: red;'>⚠️ Similar Misinformation Found</p>"
        : "<p style='color: green;'>✅ No Known Misinformation</p>";

    // Display results
    resultDiv.innerHTML = credibilityResult + languageResult + factCheckResult;
}
